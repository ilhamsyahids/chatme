<!DOCTYPE html>
<html>

<head>
    <meta charset="UTF-8">
    <title>Chat ilhamsyahids</title>
    <link rel="stylesheet" href="/css/style.css">
</head>

<body>
    <div class="init-page">
        <div class="form">
            <div style="background-color: gainsboro;margin-bottom: 10px;">
                Chat Me ðŸ’¬
            </div>
            <div class="form-line"></div>

            <div style="margin-top: 18px;">
                <form id="contact" action="/send" method="post">
                    <input type="text" name="title" placeholder="Title (optional)" />
                    <input type="text" name="name" placeholder="Name (optional)" />
                    <input type="email" name="email" placeholder="Email (optional)" />
                    <textarea required spellcheck="false" form="contact" name="message" id="message" placeholder="Message" cols="30" rows="10"></textarea>

                    <button type="submit">Send</button>
                    <% if (errors != null) { %>
                    <% errors.forEach(function(err){ %>
                    <p class="message error"><%= err %></p>
                    <% }); %>
                    <% } if (success != null) { %>
                    <p class="message success"><%= success %></p>
                    <% } %>
                </form>
            </div>
        </div> <!-- end form -->
    </div> <!-- end login container -->
</body>

</html>